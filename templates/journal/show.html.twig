{% extends 'base.html.twig' %}

{% block title %}Journal{% endblock %}

{% block body %}
    <h1>Journal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ journal.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ journal.title }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ journal.date ? journal.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ journal.content }}</td>
            </tr>
            <tr>
                <th>Backgroud_color</th>
                <td>{{ journal.backgroudColor }}</td>
            </tr>
            <tr>
                <th>Text_color</th>
                <td>{{ journal.textColor }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('journal_index') }}">back to list</a>

    <a href="{{ path('journal_edit', {'id': journal.id}) }}">edit</a>

    {{ include('journal/_delete_form.html.twig') }}
